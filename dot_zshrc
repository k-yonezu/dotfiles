# ssh-agent
env=~/.ssh/agent.env

agent_load_env () { test -f "$env" && . "$env" >| /dev/null ; }

agent_start () {
    (umask 077; ssh-agent >| "$env")
    . "$env" >| /dev/null ; }

agent_load_env

# agent_run_state: 0=agent running w/ key; 1=agent w/o key; 2=agent not running
agent_run_state=$(ssh-add -l >| /dev/null 2>&1; echo $?)

if [ ! "$SSH_AUTH_SOCK" ] || [ $agent_run_state = 2 ]; then
    agent_start
    ssh-add
elif [ "$SSH_AUTH_SOCK" ] && [ $agent_run_state = 1 ]; then
    ssh-add
fi

unset env

# p10kの初期設定を飛ばす
if [[ -r "${XDG_CACHE_HOME:-$HOME/.cache}/p10k-instant-prompt-${(%):-%n}.zsh" ]]; then
  source "${XDG_CACHE_HOME:-$HOME/.cache}/p10k-instant-prompt-${(%):-%n}.zsh"
fi

# 初期設定 start
# ~/.p10k.zshを読み込む
source /usr/share/doc/fzf/examples/key-bindings.zsh
plugins=(
  git
  aliases
  copypath
  history
  docker
  github
  composer
  laravel
  zsh-completions
  zsh-autosuggestions
  zsh-syntax-highlighting
)
export ZSH="$HOME/.oh-my-zsh"
ZSH_THEME="powerlevel10k/powerlevel10k"
source $ZSH/oh-my-zsh.sh
[[ ! -f ~/.p10k.zsh ]] || source ~/.p10k.zsh

# alias
alias g=git
alias ll="eza -l -h -@ -mU --icons --git --time-style=long-iso --color=automatic --group-directories-first"
alias l="ll -aa"
alias kc="kubectl"

# 環境変数
## vim
export EDITOR=vim
export SUDO_EDITOR=vim

# path
# export PATH=$HOME/bin:/usr/local/bin:$PATH

# vimがなくてもvimでviを起動する。
if ! type vim > /dev/null 2>&1; then
  alias vim=vi
fi

# pyenv
export PYENV_ROOT="$HOME/.pyenv"
export PATH="$HOME/.pyenv/bin:$PATH"
if type pyenv > /dev/null 2>&1; then
  eval "$(pyenv init -)"
fi

# poetry
if type poetry > /dev/null 2>&1; then
  export PATH="$HOME/.poetry/bin:$PATH"
  export PATH="$HOME/.local/bin:$PATH"
  export POETRY_VIRTUALENVS_IN_PROJECT=true
fi

# 初期設定 end
# その他の設定

# nodenv
export PATH="$HOME/.nodenv/bin:$PATH"
eval "$(nodenv init - zsh)"
export PATH="$HOME/.nodenv/versions/20.17.0/lib/node_modules/corepack/shims:$PATH"

# 履歴の拡張設定
HISTSIZE=10000
SAVEHIST=10000
HISTFILE=~/.zsh_history
setopt INC_APPEND_HISTORY SHARE_HISTORY

# fzf を有効化
[ -f ~/.fzf.zsh ] && source ~/.fzf.zsh

# fzf で履歴検索 (Ctrl + R)
# autosuggestions より後に設定しないとエラーになる
autoload -Uz fzf-history-widget || true
zle -N fzf-history-widget || true
bindkey '^R' fzf-history-widget || true
